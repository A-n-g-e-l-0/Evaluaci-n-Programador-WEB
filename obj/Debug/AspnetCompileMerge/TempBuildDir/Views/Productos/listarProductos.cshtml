

@Scripts.Render("~/bundles/js")



@Scripts.Render("~/bundles/js/LoadUser")

@Styles.Render("~/bundles/css/paguinado")
@Scripts.Render("~/bundles/js/paguinado")


@Styles.Render("~/bundles/css")

@*Required Propio*@
@Styles.Render("~/bundles/css/requerido")

@Scripts.Render("~/bundles/js/LlenaCombos")
@Scripts.Render("~/bundles/js/ListarProductos")


@{
    ViewBag.Title = "Lista de Productos";
}

<h2>Productos</h2>


<!-- Page Table Productos -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive" id="dataTableProductos">

        </div>
    </div>
</div>

<!-- Modal Productos-->
<div class="modal fade" id="ModalProducto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div style="border-top:1PX solid #d4d0d0">
                    <br />
                </div>
                <!--CODIGOS rex barras DESCR CHECKS -->
                <div class="row">
                    <!--<div class="col-lg-6">
                        <div class="form-group">
                            <label> CODIGO DE BARRA</label>-->
                            @* <asp:TextBox runat="server" CssClass="form-control" placeholder="Ingrese Codigo de Barras..." ID="txtCBarras"> </asp:TextBox>*@
                            <!--<div>  <input type="number" class="form-control autoclean obligatorio" id="txtCBarras" placeholder="Ingrese Codigo de Barras" required> </div>
                        </div>

                    </div>-->

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>CLAVE</label>
                            @*<asp:TextBox runat="server" CssClass="form-control" placeholder="Ingrese Codigo REX..." ID="txtRex"> </asp:TextBox>*@
                            <div>
                                <input type="text" class="form-control autoclean obligatorio" id="txtRex" placeholder="Clave" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            @*<asp:CheckBox runat="server" ID="chkServices" Checked="false" class="form-check-input" />*@
                            <input class='checkbox' type='checkbox' id='chkServices' />
                            <label class="form-check-label" for="chkServices">SERVICIO</label>

                            @*<asp:CheckBox runat="server" ID="chkInsumo" Checked="false" class="form-check-input" />
                                <label class="form-check-label" for="chkInsumo">INSUMO</label>
                                <asp:CheckBox runat="server" ID="chkUse" Checked="false" class="form-check-input" />
                                <label class="form-check-label" for="chkUse">USO</label>*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <img class="img-profile" width="80" height="100" style="border:1px solid" id="imgFoto" />

                                </div>
                                <div class="col-sm-12">

                                    <input type="file" value="..." id="btnFoto" onchange="previewImg(this)" />
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="form-group">
                            <label>DESCRIPCIÓN</label>
                            @*<asp:TextBox runat="server" CssClass="form-control" placeholder="Ingrese Descripcion..." ID="txtDescrpcion"> </asp:TextBox>*@
                            <div>
                                <input type="text" class="form-control autoclean obligatorio" id="txtDescrpcion" placeholder="Ingrese Descripción..." required>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>EXISTENCIAS</label>
                            @*<asp:TextBox runat="server" CssClass="form-control" placeholder="Ingrese Descripcion..." ID="txtDescrpcion"> </asp:TextBox>*@
                            <div>
                                <input type="number" class="form-control autoclean obligatorio" id="txtExistencias" placeholder="0" required>
                            </div>
                        </div>
                    </div>
                </div>
                <!--ENFD  CODIGOS rex barras DESCR CHECKS -->
                <div style="border-top:1PX solid #d4d0d0">
                    <br />
                </div>



                <div class="row">


                    <div class="col-lg-6">
                        <label>MARCA</label>
                        <div class="form-group input-group">
                            @* <asp:DropDownList runat="server" ID="ddlMarcas" CssClass="form-control" EnableViewState="true"> </asp:DropDownList>*@
                            <select class="custom-select" id="ddlMarcas">
                            </select>

                        </div>
                    </div>


                    <div class="col-lg-6">
                        <label>UNIDAD</label>
                        <div class="form-group input-group">
                            @*<asp:DropDownList runat="server" ID="ddlUnidades" CssClass="form-control" EnableViewState="true"> </asp:DropDownList>*@
                            <select class="custom-select" id="ddlUnidades">
                            </select>

                        </div>
                    </div>


                    <div class="col-lg-6">
                        <label>CATEGORIAS</label>
                        <div class="form-group input-group">
                            <!-- Drpdownlist CategoriasCategorias-->
                            @* <asp:DropDownList runat="server" ID="ddlCategorias" CssClass="form-control" EnableViewState="true"> </asp:DropDownList>*@

                            <select class="custom-select" id="ddlCategorias">
                            </select>

                        </div><!--//End Agrega Categorias-->
                    </div>



                    <div class="col-lg-6">
                        <label> PROVEEDOR </label>
                        <div class="form-group input-group">
                            <!-- Cargar Proveedores-->

                            <select class="custom-select" id="ddlProveedor">
                            </select>


                        </div>


                    </div>




                </div>


                <div class="col-lg-12" style="border-top:1PX solid #d4d0d0">
                    <br />
                </div>




                <!--pTRECIOS COMPRA -->
                <div class="row">
                    <div class="col-lg-4">
                        <label>PRECIO  COMPRA</label>
                        <div class="form-group input-group">
                            <span class="input-group-addon">$</span>
                            @*<asp:TextBox runat="server" CssClass="form-control" placeholder="0.00..." ID="txtPCostosIva" onblur="AumentarIVA(this);"> </asp:TextBox>*@
                            <div>
                                <input type="number" class="form-control autoclean" id="txtPrecioCompra" placeholder="0.00" required>
                            </div>
                        </div>
                    </div>

                    <!--pTRECIOS vENTA -->

                    <div class="col-lg-4">
                        <label>PRECIO VENTA</label>
                        <div class="form-group input-group">
                            <span class="input-group-addon">$</span>
                            @*<asp:TextBox runat="server" CssClass="form-control" placeholder="0.00" ID="txtPVsIva" onblur="CalcularGNsinIVA(this);"> </asp:TextBox>*@
                            <div><input type="number" class="form-control autoclean obligatorio" id="txtPrecioVenta" placeholder="0.00" required> </div>
                        </div>
                    </div>


                    <!--GANNACIASA -->

                    <div class="col-lg-4">
                        <label>MARGEN DE GANANCIA</label>
                        <div class="form-group input-group">
                            @*<asp:TextBox runat="server" CssClass="form-control" placeholder="0.00" ID="txtMargenPorcSiva"> </asp:TextBox>*@
                            <div>
                                <input type="number" class="form-control autoclean" id="txtMargenGanancia" placeholder="0.00" required>
                            </div>
                            <span class="input-group-addon">%</span>
                        </div>
                    </div>

                </div>


            </div>
            <div class="modal-footer">
                <div><button onclick="Validar()" type="button" class="btn btn-primary">Aceptar</button></div>
                <button id="btnCancel" type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!--END ModalProductos-->
